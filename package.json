  "validate-branch-name": {
    "pattern": "^(main|develop){1}$|^(feature|bugfix|hotfix|chore|experiment|config)/.+$",
    "errorMsg": "Branch name format : <type>/<name>"
  },
  "lint-staged": {
    "*.(js|html|css|ts|tsx)": [
      "npx prettier --write",
      "npx eslint --fix"
    ],
    "public/*/*.json": [
      "npx prettier --write"
    ]
  }
