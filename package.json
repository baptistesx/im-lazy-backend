    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.27.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.2",
    "npm": "^8.5.1",
    "passport": "^0.5.2",
    "passport-google-token": "^0.1.2",
    "passport-local": "^1.0.0",
    "pg": "^8.7.3",
